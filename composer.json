{
  "name": "drmvc/orm",
  "description": "Lightweight ORM",
  "homepage": "https://drmvc.com/",
  "license": "MIT",
  "keywords": [
    "ORM",
    "Table Data Gateway"
  ],
  "type": "library",
  "authors": [
    {
      "name": "Koenig",
      "email": "compolom@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "DrMVC\\": "./src/"
    }
  },
  "require": {
    "php": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.0",
    "drmvc/database": "@dev",
    "drmvc/config": "^3.0.0",
    "zendframework/zend-coding-standard": "^1.0"
  },
  "suggest": {
    "ext-xdebug": "^2.6.0"
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test-coverage": "phpunit --coverage-clover clover.xml"
  },
  "minimum-stability": "stable"
}
